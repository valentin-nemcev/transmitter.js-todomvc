{
  "parser": "babel-eslint",
  "extends": "airbnb/base",
  "env": {
    "es6": true,
    "browser": true,
    "commonjs": true
  },
  "rules": {
    "no-unused-vars": 1,
    "no-console": 1,
    "id-length": 0,
    "max-len": [1, 79],
    // â†“ disabled unless https://github.com/eslint/eslint/issues/3944 is
    //   implemented
    "no-use-before-define": 0,
    "eqeqeq": [2, "smart"],
    "no-cond-assign": [2, "except-parens"],
    "no-multi-spaces": [2, { exceptions: { "ImportDeclaration": true, "ExportNamedDeclaration": true } }],
    "no-else-return": 0,
    "func-names": 0,
    "indent": [
      2,
      2
    ]
  },
}
